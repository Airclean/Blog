<% include ./partials/header.ejs%>
<div class="ui text main container">
    <div class="ui huge header"><%=note.title%></div>
    <div class="ui top attached segment">
        <div class="content">
            <span><%=note.created.toDateString()%></span>
        </div>
        <div id="note_body" class="description">
            <p><%-note.body%></p>
        </div>
        <div id="Operation">
        <a href="/blogs/notes/<%=note._id%>/edit" class="ui inverted violet button">Edit</a>
        <form id="Delete" action="/blogs/notes/<%=note._id%>?_method=DELETE" method="POST">
            <button class="ui orange inverted button">Delete</button>
        </form>
        </div>
    </div>
</div>

