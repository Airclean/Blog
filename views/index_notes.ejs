<% include ./partials/header.ejs%>
<div class="ui text main container">
    <a href="/blogs/notes/new" class="ui positive button">Create</a>
    <% notes.forEach(function(note){%>
        <div class="ui huge header"><%=note.title%></div>
        <div class="ui top attached segment">
            <div class="content">
                <span><%=note.created.toDateString()%></span>
            </div>
            <div id="note_body" class="description">
                <p><%-note.body%></p>
            </div>
            <a href="/blogs/notes/<%=note._id%>" class="ui floated inverted violet button">Read More<i class="right chevron icon"></i></a>
        </div>
        
    <% })%>
</div>

<% include ./partials/footer.ejs%>